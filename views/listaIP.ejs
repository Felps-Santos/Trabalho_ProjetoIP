<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Acesso - Tabela de Cadastro</title>
    <link rel="stylesheet" href="/ListaIPcss/style.css"> <!-- Adicione o seu CSS se necessário -->
    <link rel="stylesheet" href="/telainicialcss/header.css">
</head>
<body>

    <header class="cabecalho">
        <nav class="cabecalho_menu">
            <img class="imagem_logo" src="/img/nome_logo.png" alt="Logo da empresa">
            <ul class="nav_list" id="section1">
                <li><a class="cabecalho_menu_link" href="/listagem">Lista de IP</a></li>
                <li><a class="cabecalho_menu_link" href="/cadastroIP">Cadastro de IP</a></li>
                <li><a href="/home">
                    <button class="logout-button">Sair</button> <!-- Botão de logout no header -->
                </a></li>
            </ul>
        </nav>
    </header>

    <h1>Bem-vindo ao Acesso - Tabela de Cadastro</h1>

    <!-- Barra de Pesquisa e Filtro -->
    <div class="search-container">
        <input type="text" id="searchInput" class="search-input" placeholder="Pesquisar...">
        <select id="filterSelect" class="filter-select">
            <option value="">Filtrar por...</option>
            <option value="nome">Nome</option>
            <option value="matricula">Matrícula</option>
            <option value="ip">Endereço de IP</option>
            <option value="data">Data de Cadastro</option>
        </select>
    </div>

    <!-- Tabela de informações -->
    <table id="infoTable">
        <table border="1">
            <thead>
              <tr>
                <th>Utilizador</th>
                <th>Matrícula</th>
                <th>IP</th>
                <th>Data de Registro</th>
              </tr>
            </thead>
            <tbody>
                <tr>
                  <td> ip.utilizador </td>
                  <td> ip.matricula_utilizador </td>
                  <td>ip.ip </td>
                  <td>ip.data_registro </td>
                </tr>
            </tbody>
          </table>
          
        <tbody id="tableBody">
            <!-- Dados da Tabela serão inseridos aqui via JavaScript -->
        </tbody>
    </table>

    <script>
        // Dados simulados para a tabela (substitua com dados reais do servidor)
        const ips = [
            { utilizador: 'Carlos Silva', matricula_utilizador: '12345', ip: '192.168.0.1', data_registro: '2024-11-15' },
            { utilizador: 'Ana Souza', matricula_utilizador: '12346', ip: '192.168.0.2', data_registro: '2024-11-16' },
            { utilizador: 'José Oliveira', matricula_utilizador: '12347', ip: '192.168.0.3', data_registro: '2024-11-17' },
        ];

        // Função para preencher a tabela com dados
        function populateTable() {
            const tableBody = document.getElementById('tableBody');
            tableBody.innerHTML = ''; // Limpar a tabela antes de preencher

            ips.forEach(ip => {
                const row = document.createElement('tr');
                const dataRegistro = new Date(ip.data_registro).toLocaleDateString('pt-BR');

                row.innerHTML = `
                    <td>${ip.utilizador}</td>
                    <td>${ip.matricula_utilizador}</td>
                    <td>${ip.ip}</td>
                    <td>${dataRegistro}</td>
                `;
                tableBody.appendChild(row);
            });
        }

        // Chama a função para preencher a tabela ao carregar a página
        window.onload = populateTable;

        // Função para filtrar dados da tabela com base na pesquisa e no filtro
        document.getElementById('searchInput').addEventListener('input', filterTable);
        document.getElementById('filterSelect').addEventListener('change', filterTable);

        function filterTable() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const filter = document.getElementById('filterSelect').value;
            const table = document.getElementById('infoTable');
            const rows = table.getElementsByTagName('tr');
            
            for (let i = 1; i < rows.length; i++) { 
                const cells = rows[i].getElementsByTagName('td');
                let match = false;
                
                // Dependendo do filtro selecionado, verifica a célula correspondente
                switch (filter) {
                    case 'nome':
                        match = cells[0].textContent.toLowerCase().includes(searchTerm);
                        break;
                    case 'matricula':
                        match = cells[1].textContent.toLowerCase().includes(searchTerm);
                        break;
                    case 'ip':
                        match = cells[2].textContent.toLowerCase().includes(searchTerm);
                        break;
                    case 'data':
                        match = cells[3].textContent.toLowerCase().includes(searchTerm);
                        break;
                    default:
                        match = Array.from(cells).some(cell => cell.textContent.toLowerCase().includes(searchTerm));
                }
                rows[i].style.display = match ? '' : 'none';
            }
        }
    </script>
</body>
</html>

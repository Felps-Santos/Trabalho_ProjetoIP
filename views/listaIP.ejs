<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Acesso - Tabela de Cadastro</title>
    <link rel="stylesheet" href="/ListaIPcss/style.css"> <!-- Adicione o seu CSS se necessário -->
    <link rel="stylesheet" href="/telainicialcss/header.css">
    <link rel="stylesheet" href="/CadastroIPCSS/style.css">

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>
<body>

    <header class="cabecalho">
        <nav class="cabecalho_menu">
            <img class="imagem_logo" src="/img/nome_logo.png" alt="Logo da empresa">
            <ul class="nav_list" id="section1">
                <li><a class="cabecalho_menu_link" href="/lista">Lista de IP</a></li>
                <li><a class="cabecalho_menu_link" href="/cadastroIP">Cadastro de IP</a></li>
                <li><form action="/lista/logout" method="GET">
                    <button class="Btn" type="submit">
                      <div class="sign"><svg viewBox="0 0 512 512"><path d="M377.9 105.9L500.7 228.7c7.2 7.2 11.3 17.1 11.3 27.3s-4.1 20.1-11.3 27.3L377.9 406.1c-6.4 6.4-15 9.9-24 9.9c-18.7 0-33.9-15.2-33.9-33.9l0-62.1-128 0c-17.7 0-32-14.3-32-32l0-64c0-17.7 14.3-32 32-32l128 0 0-62.1c0-18.7 15.2-33.9 33.9-33.9c9 0 17.6 3.6 24 9.9zM160 96L96 96c-17.7 0-32 14.3-32 32l0 256c0 17.7 14.3 32 32 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32l-64 0c-53 0-96-43-96-96L0 128C0 75 43 32 96 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32z"></path></svg></div>
                      <div class="text">Sair</div>
                    </button>
                  </form></li>
            </ul>
        </nav>
    </header>

    <h1>Bem-vindo ao Acesso - Tabela de Cadastro</h1>

    <div class="search-container">
        <input type="text" id="searchInput" class="search-input" placeholder="Pesquisar...">
        <select id="filterSelect" class="filter-select">
            <option value="">Filtrar por...</option>
            <option value="utilizador">Utilizador</option>
            <option value="matricula">Matrícula</option>
            <option value="ip">Endereço de IP</option>
            <option value="data">Data de Cadastro</option>
        </select>
    </div>

    <!-- Tabela de informações -->
    <table id="infoTable">
        <thead>
            <tr>
                <th>Utilizador</th>
                <th>Matrícula</th>
                <th>Endereço de IP</th>
                <th>Data de Cadastro</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% ips.forEach(ip => { %>
            <!-- Dados da Tabela -->
            <tr>
                <td><%= ip.utilizador %></td>
                <td><%= ip.matricula_utilizador %></td>
                <td><%= ip.ip %></td>
                <td><%= format(ip.data_registro, 'dd/MM/yyyy') %></td>
                <td>
                    <form action="/lista/edit/<%= ip.id_ip %>" method="GET">                       
                         <button type="submit">Editar
                            
                         </button>                   
                    </form>
                    <form id="delete-form-<%= ip.id_ip %>" action="/lista/deletar/<%= ip.id_ip %>" method="POST">
                        <button class="delet_button" type="button" onclick="confirmDelete('<%= ip.id_ip %>')">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" clip-rule="evenodd" d="M17 5V4C17 2.89543 16.1046 2 15 2H9C7.89543 2 7 2.89543 7 4V5H4C3.44772 5 3 5.44772 3 6C3 6.55228 3.44772 7 4 7H5V18C5 19.6569 6.34315 21 8 21H16C17.6569 21 19 19.6569 19 18V7H20C20.5523 7 21 6.55228 21 6C21 5.44772 20.5523 5 20 5H17ZM15 4H9V5H15V4ZM17 7H7V18C7 18.5523 7.44772 19 8 19H16C16.5523 19 17 18.5523 17 18V7Z" fill="currentColor"/>
                                <path d="M9 9H11V17H9V9Z" fill="currentColor"/>
                                <path d="M13 9H15V17H13V9Z" fill="currentColor"/>
                            </svg>
                            Excluir
                        </button>
                    </form>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>

    <script src="/js/ListaIP.js"></script>
    <script>

        document.getElementById('searchInput').addEventListener('input', filterTable);
        document.getElementById('filterSelect').addEventListener('change', filterTable);

        function filterTable() {

            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const filter = document.getElementById('filterSelect').value;

            const table = document.getElementById('infoTable');
            const rows = table.getElementsByTagName('tr');

            for (let i = 1; i < rows.length; i++) { 
                const cells = rows[i].getElementsByTagName('td');
                let match = false;

                switch (filter) {
                    case 'utilizador':
                        match = cells[0].textContent.toLowerCase().includes(searchTerm);
                        break;
                    case 'matricula':
                        match = cells[1].textContent.toLowerCase().includes(searchTerm);
                        break;
                    case 'ip':
                        match = cells[2].textContent.toLowerCase().includes(searchTerm);
                        break;
                    case 'data':
                        match = cells[3].textContent.toLowerCase().includes(searchTerm);
                        break;
                    default:
                        
                        match = Array.from(cells).some(cell => cell.textContent.toLowerCase().includes(searchTerm));
                }
                rows[i].style.display = match ? '' : 'none';
            }
        }
    </script>
</body>
</html>
